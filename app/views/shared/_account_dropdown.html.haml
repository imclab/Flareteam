%li.dropdown
  %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
    - if @notifications > 0
      %span.badge.badge-success= @notifications
    = current_user.email
    %span.caret
  %ul.dropdown-menu
    %li= link_to 'Account', edit_profile_path
    %li
      = organization_link do
        Organization
        - if @notifications > 0
          %span.badge.badge-success= @notifications
    %li.divider
    %li= link_to('Sign out', destroy_user_session_path, method: :delete)
